{
  "name": "@opentext/sdp-sdm-tests-to-run-conversion",
  "version": "26.1.0",
  "description": "JavaScript-based tool that converts the testsToRun parameter for running automated tests from OpenText Core Software Delivery Platform and OpenText Software Delivery Management.",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "sdp-sdm-tests-to-run-conversion": "./dist/cli/main.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "build:lib": "tsc",
    "build:task": "npx ncc build src/main.ts -o dist/cli --license licenses.txt",
    "build": "npm run build:lib && npm run build:task",
    "prepare": "husky install",
    "run": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MicroFocus/sdp-sdm-tests-to-run-conversion.git"
  },
  "keywords": [
    "testsToRun",
    "convertor",
    "github",
    "actions",
    "alm",
    "octane",
    "valueedge",
    "opentext",
    "sdp",
    "sdm",
    "software",
    "delivery"
  ],
  "author": "Ovidiu Stefan Popescu",
  "contributors": [
    {
      "name": "Ovidiu Stefan Popescu",
      "email": "opopescu@opentext.com"
    }
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.4",
    "@types/q": "^1.5.8",
    "@types/yargs": "^17.0.33",
    "@vercel/ncc": "^0.38.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@microfocus/alm-octane-js-rest-sdk": "^25.4.0",
    "@xmldom/xmldom": "^0.8.11",
    "azure-pipelines-task-lib": "^5.2.2",
    "cfb": "^1.2.2",
    "isomorphic-git": "^1.35.0",
    "xml-js": "^1.6.11",
    "yargs": "^17.7.2"
  }
}
