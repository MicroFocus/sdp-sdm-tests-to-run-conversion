  "contributors": [
    {
      "name": "Ovidiu Stefan Popescu",
      "email": "opopescu@opentext.com"
    }
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.8.4",
    "@types/yargs": "^17.0.33",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  }
